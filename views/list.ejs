<!-- linking the header.ejs to this file -->

<%- include("header"); -%>

  <div class="box" id="heading">
    <h1> <%=listTitle%> </h1>

  </div>
  <div class="box">
    <!-- for loop to create a new item list -->

    <%newListItems.forEach(function(item){ %>
      <form action="/delete" method="post">
        <div class="item">
          <!-- name is the key and value is the value associated with the key. on>Change allows you submit a checkbox -->
          <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
          <!-- include data that can't be modified by the user -->
          <input type="hidden" name="listName" value="<%=listTitle%>"></input>
          <p> <%=item.name%> </p>
        </div>
      </form>

    <% }) %>

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item"  autocomplete="off">
      <button type="submit" name="list" value="<%=listTitle%>">+</button>
    </form>
  </div>


  <!-- linking the footer.ejs to this file using ejs -->
  <%- include("footer"); -%>
